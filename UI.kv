#:kivy 1.0.9

<UI>:
    title: 'InputDialog'
    auto_dismiss: False
    id: test1

    RelativeLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: 'test2'

        Label:
            text: "Enter compounds below, seperated by ; or a newline. Press Ctrl+Enter to proceed!"
            pos_hint: {'center_y': 0.975}

            halign: "left"

        TextInput:
            id: input
            hint_text:'Enter compounds'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5

        TextInput:
            id: output
            hint_text:'Output'
            size_hint: 0.95, 0.4
            pos_hint: {'center_x': 0.5, 'top': 0.42}
